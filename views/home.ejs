<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
</head>
<body>
    <%- include('./partials/navbar') %> 

    <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
            <div class="col">
                <div class="card col " style="width: 18rem;">
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Cover Image"> <!-- Fixed field name -->
                    <div class="card-body">
                        <h5 class="card-title"><%= blog.title %></h5> <!-- Added missing '=' -->
                        <p class="card-text"><%= blog.content %></p> <!-- Added missing '=' -->
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div> 
            
        <% }); %>
    </div>

    <%- include('./partials/scripts') %> 
</body>
</html>
